{% extends 'base.html.twig' %}

{% block body %}
    <div class="my-5">
        <h1>Liste des disciplines</h1>

        <table class="table table-striped table-hover text-end">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for discipline in disciplines %}
                    <tr>
                        <td>{{ discipline.id }}</td>
                        <td>{{ discipline.nom }}</td>
                        <td>
                            <a href="{{ path('app_update_discipline', {id: discipline.id}) }}"><button class="btn btn-info">Modifier</button></a>
                            <a href="{{ path('app_delete_discipline', {id: discipline.id}) }}"><button class="btn btn-danger">Supprimer</button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-warning bg-secondary">Aucune discipline d'enregistr√©e</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-center">
                        {% include "discipline/_form.html.twig" %}
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
